<Page
    x:Class="IoTDeviceDemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IoTDeviceDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Temeperature" TextAlignment="Center" />
            <TextBlock Name="temperatureTB" TextAlignment="Center" FontSize="24" />

            <TextBlock Text="Pressure" TextAlignment="Center" Margin="0,24,0,0" />
            <TextBlock Name="pressureTB" TextAlignment="Center" FontSize="24" />

            <TextBlock Text="Message Received" TextAlignment="Center" Margin="0,24,0,0" />
            <TextBlock Name="messageTB" TextAlignment="Center" FontSize="24" TextWrapping="Wrap" />

        </StackPanel>

    </Grid>
</Page>
